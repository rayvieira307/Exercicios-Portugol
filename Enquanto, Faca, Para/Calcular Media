programa
{
	
	funcao inicio()
	{
    
	     const inteiro vetor = 3
	     inteiro x[vetor], i
	     real soma=0, media=0
	
          para (i=0; i<vetor; i++) {
 	
               escreva ("Digite a quantidade de numeros: ")
                leia (x[i])
                soma = soma + x[i]
                media = soma /3
          }
	     
             escreva (media)
             
	    se (vetor <=0 ou vetor >3) {
	   	
	   	escreva ("Números de elementos deve estar entre 1 e 5")
	   }
	}
}
