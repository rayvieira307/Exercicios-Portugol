programa
{
	
	funcao inicio()
	{
         inteiro A,B,C
         
	     
		escreva("Digite o valor do primeiro lado do triângulo: ")
		leia (A)
		  
		escreva("Digite o valor do segundo lado do triângulo: ")
		leia (B)
		  
		escreva("Digite o valor do terceiro lado do triângulo: ")
		leia (C)

		se (A+B+C ==180) {
			escreva ("É um triângulo!!\n")
			} 

                se (A==B e A==C) {
			  escreva ("Formam um triângulo equilátero!!")
			 }
		      senao se (A==B ou A==C ou B==C) {
			  escreva ("Formam um triângulo isóceles!!")
			 }
		      senao {
			  escreva ("Formam um triângulo escaleno!!")
			}
			
		}
		
	}
